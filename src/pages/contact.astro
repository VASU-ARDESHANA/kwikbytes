---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import { phone } from "~/data/config";
---

<Layout title="Contact Us" pageTitle="Contact" description="Get in touch with us for any questions or inquiries.">
	<Section>
		<div class="text-center mb-16">
			<h1 class="text-3xl md:text-4xl font-bold text-brand-green text-center mb-4">CONTACT US</h1>
			
			<div class="space-y-2 text-gray-700 mb-8">
				<p>Shop No 6, Mudra Complex</p>
				<p>Balaji Hospital Lane, Beside Siddheshwar Dining Hall</p>
				<p>Atma Shraddha Society, Subhanpura</p>
				<p>Vadodara, Gujarat 390023</p>
			</div>
			
			<div class="flex flex-col sm:flex-row items-center justify-center gap-2 text-gray-700">
				<a href={phone.href} class="hover:text-brand-green transition">
					{phone.label}
				</a>
			</div>
		</div>

		<div class="max-w-2xl mx-auto mb-16">
			<div class="relative w-full" style="padding-bottom: 56.25%;">
				<iframe 
					src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d230.68407596014868!2d73.16133473568304!3d22.31791159127684!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395fc97557b7fe97%3A0xae9759cb3335690c!2sCAFE%20KWIK%20BYTES!5e0!3m2!1sen!2sin!4v1765972538993!5m2!1sen!2sin" 
					class="absolute top-0 left-0 w-full h-full rounded-2xl shadow-lg"
					style="border:0;" 
					allowfullscreen="" 
					loading="lazy" 
					referrerpolicy="no-referrer-when-downgrade"
				></iframe>
			</div>
			
			<div class="text-center mt-8">
				<a 
					href="https://www.google.com/maps/place/CAFE+KWIK+BYTES/@22.3179116,73.1613347,20z/data=!4m6!3m5!1s0x395fc97557b7fe97:0xae9759cb3335690c!8m2!3d22.3179116!4d73.1619184!16s%2Fg%2F11vz02bxzy?entry=ttu&g_ep=EgoyMDI1MDEwOC4wIKXMDSoASAFQAw%3D%3D" 
					target="_blank"
					class="inline-flex items-center px-8 py-3 border-2 border-gray-800 rounded-full font-medium hover:bg-gray-800 hover:text-white transition-colors"
				>
					OPEN MAPS
				</a>
			</div>
		</div>
	</Section>
</Layout>
